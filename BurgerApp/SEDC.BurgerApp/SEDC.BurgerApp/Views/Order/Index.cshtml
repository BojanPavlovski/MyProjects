@model List<OrderListViewModel>

    <h3 style="color: white">List of all orders:</h3>
    <div class="row">

    <div>
        <a asp-controller="Order" asp-action="CreateOrder">Create order</a>
    </div>

    @foreach (OrderListViewModel orderModel in @Model)
    {
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem; margin-left:10px;">
            <div class="card-body">
                <h5 class="card-title" style="color:white">User: @orderModel.UserFullName</h5>
            </div>
            <div class="card-footer bg-transparent border-success" style="color:white"> <strong>@orderModel.TotalPrice DEN</strong></div>
        
            <div style="display:flex position:flex">
                <a asp-controller="Order" asp-action="Details" asp-route-id="@orderModel.Id">Details</a>
                <a asp-controller="Order" asp-action="Delete" asp-route-id="@orderModel.Id">Delete</a>
                <a asp-controller="Order" asp-action="EditOrder" asp-route-id="@orderModel.Id">Edit</a>
            </div>
        </div>
    }
</div>

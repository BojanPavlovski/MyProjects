@model OrderDetailsViewModel


<div class="text-center">
    <h2 class="display-4">Order Details</h2>
</div>
<a asp-controller="Order" asp-action="AddBurger" asp-route-id="@Model.Id">Add Burger</a>
<br />
<div class="card">
    <div class="card-body">
        <h5 class="card-title">User: @Model.UserFullName</h5>
        <p class="card-text"><strong>Total Price:</strong> @Model.TotalPrice <strong> MKD </strong></p>
    </div>

    <div class="row">
        <div>Burgers:</div>
        @foreach (string burger in @Model.BurgerNames)
        {
            <div class="card" style="width: 18rem; margin-left:15px;">
                <img class="card-img-top" src="https://sallysbakingaddiction.com/wp-content/uploads/2018/07/best-black-bean-burgers-2.jpg" alt="Card image cap">
                <div class="card-body">

                    <h3 class="text-center">@burger</h3>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <a asp-controller="Order" asp-action="Index" style="color:white">Back to orders</a>
</div>


@model BurgerDetailsViewModel

<h3>Add a new Burger to the menu!</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEdit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Burger name:</label>
                <input asp-for="Name" class="form-control"></input>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input type="number" asp-for="Price" />
            </div>

            <div>
                <label asp-for="HasFries" class="control-label">Includes Fries:</label>
                <input type="checkbox" asp-for="HasFries" />
            </div>
            <div>
                <label asp-for="IsVegan" class="control-label">Is Vegan:</label>
                <input type="checkbox" asp-for="IsVegan" />
            </div>

            <button type="submit" class="btn btn-default">Save</button>
            <a asp-controller="Burger" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>


